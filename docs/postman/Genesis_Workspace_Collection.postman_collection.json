{
    "info": {
        "_postman_id": "genesis-workspace-collection",
        "name": "Genesis Workspace API",
        "description": "Workspace and Document API collection for Genesis project",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Workspaces",
            "item": [
                {
                    "name": "Create Workspace",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.success && jsonData.data) {",
                                    "    pm.environment.set('workspaceId', jsonData.data.id);",
                                    "    console.log('Workspace ID saved: ' + jsonData.data.id);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"My Annotation Project\",\n  \"description\": \"Coreference resolution annotations\",\n  \"annotationType\": \"COREF\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/workspaces",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "workspaces"
                            ]
                        },
                        "description": "Create a new workspace. Workspace ID is saved to environment."
                    },
                    "response": []
                },
                {
                    "name": "List My Workspaces",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/workspaces",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "workspaces"
                            ]
                        },
                        "description": "Get all workspaces owned by the authenticated user"
                    },
                    "response": []
                },
                {
                    "name": "Get Workspace",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/workspaces/{{workspaceId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "workspaces",
                                "{{workspaceId}}"
                            ]
                        },
                        "description": "Get a workspace by ID"
                    },
                    "response": []
                },
                {
                    "name": "Update Workspace Status",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/workspaces/{{workspaceId}}/status?status=ACTIVE",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "workspaces",
                                "{{workspaceId}}",
                                "status"
                            ],
                            "query": [
                                {
                                    "key": "status",
                                    "value": "ACTIVE",
                                    "description": "DRAFT, ACTIVE, or ARCHIVED"
                                }
                            ]
                        },
                        "description": "Update workspace status"
                    },
                    "response": []
                },
                {
                    "name": "Delete Workspace",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/workspaces/{{workspaceId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "workspaces",
                                "{{workspaceId}}"
                            ]
                        },
                        "description": "Delete a workspace and all its documents"
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Members",
            "item": [
                {
                    "name": "Add Member",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"userId\": \"{{memberUserId}}\",\n  \"role\": \"ANNOTATOR\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/workspaces/{{workspaceId}}/members",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "workspaces",
                                "{{workspaceId}}",
                                "members"
                            ]
                        },
                        "description": "Add a member to the workspace. Roles: ADMIN, ANNOTATOR, CURATOR"
                    },
                    "response": []
                },
                {
                    "name": "Remove Member",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/workspaces/{{workspaceId}}/members/{{memberUserId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "workspaces",
                                "{{workspaceId}}",
                                "members",
                                "{{memberUserId}}"
                            ]
                        },
                        "description": "Remove a member from the workspace"
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Documents",
            "item": [
                {
                    "name": "Upload Document",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.success && jsonData.data) {",
                                    "    pm.environment.set('documentId', jsonData.data.id);",
                                    "    console.log('Document ID saved: ' + jsonData.data.id);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "file",
                                    "type": "file",
                                    "src": "",
                                    "description": "Select a text file to upload"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/workspaces/{{workspaceId}}/documents",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "workspaces",
                                "{{workspaceId}}",
                                "documents"
                            ]
                        },
                        "description": "Upload a document to the workspace. Document ID is saved to environment."
                    },
                    "response": []
                },
                {
                    "name": "List Documents",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/workspaces/{{workspaceId}}/documents",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "workspaces",
                                "{{workspaceId}}",
                                "documents"
                            ]
                        },
                        "description": "List all documents in the workspace ordered by orderIndex"
                    },
                    "response": []
                },
                {
                    "name": "Get Document",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/documents/{{documentId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "documents",
                                "{{documentId}}"
                            ]
                        },
                        "description": "Get a document by ID"
                    },
                    "response": []
                },
                {
                    "name": "Update Document Status",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/documents/{{documentId}}/status?status=IMPORTED",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "documents",
                                "{{documentId}}",
                                "status"
                            ],
                            "query": [
                                {
                                    "key": "status",
                                    "value": "IMPORTED",
                                    "description": "UPLOADED, IMPORTED, ANNOTATING, COMPLETE"
                                }
                            ]
                        },
                        "description": "Update document processing status"
                    },
                    "response": []
                },
                {
                    "name": "Get Document Count",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/workspaces/{{workspaceId}}/documents/count",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "workspaces",
                                "{{workspaceId}}",
                                "documents",
                                "count"
                            ]
                        },
                        "description": "Get the count of documents in the workspace"
                    },
                    "response": []
                },
                {
                    "name": "Delete Document",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/documents/{{documentId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "documents",
                                "{{documentId}}"
                            ]
                        },
                        "description": "Delete a document and its stored file"
                    },
                    "response": []
                }
            ]
        }
    ]
}